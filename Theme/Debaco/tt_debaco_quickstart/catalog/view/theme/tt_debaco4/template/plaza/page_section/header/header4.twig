<header class="scroll-fix">
	<div class="container">
		<div class="box">
			<div class="box-inner">
				<div class="box-inner-inner">
					{{ position3 }}				
					<div id="logo">
					{% if logo %}<a href="{{ home }}"><img src="{{ logo }}" title="{{ name }}" alt="{{ name }}" class="img-responsive" /></a>{% else %}
					  <h1><a href="{{ home }}">{{ name }}</a></h1>
					  {% endif %}
					</div>
					<div class="col-cart">
						<div class="header-phone"><a href="{{ contact }}"><span class="hidden-xs hidden-sm">{{ telephone }}</span></a></div>
