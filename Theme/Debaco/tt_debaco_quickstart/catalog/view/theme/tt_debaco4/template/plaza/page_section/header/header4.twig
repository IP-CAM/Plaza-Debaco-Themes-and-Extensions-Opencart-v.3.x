						  <ul class="list-inline">
							<li class="dropdown"><a href="{{ account }}" title="{{ text_account }}" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-user"></i> <span class="hidden-xs hidden-sm">{{ text_account }}</span> <i class="icon-right ion-chevron-down"></i></a>
