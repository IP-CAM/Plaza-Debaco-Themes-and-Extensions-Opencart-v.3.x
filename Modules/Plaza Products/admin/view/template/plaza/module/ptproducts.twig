{{ header }}{{ column_left }}
<div id="content">
    <div class="page-header">
        <div class="container-fluid">
            <div class="pull-right">
                <button type="submit" form="form-module" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
                <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
            <h1>{{ heading_title }}</h1>
            <ul class="breadcrumb">
                {% for breadcrumb in breadcrumbs %}
                    <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
                {% endfor %}
            </ul>
        </div>
    </div>
    <div class="container-fluid">
        {% if error_warning %}
            <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
                <button type="button" class="close" data-dismiss="alert">&times;</button>
            </div>
        {% endif %}
        <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-module">
            <div class="row">
                <div class="col-md-7 col-sm-12">
                    <div class="theme-option-container">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h3 class="panel-title"><i class="fa fa-puzzle-piece"></i> {{ text_module_settings }}</h3>
                            </div>
                            <div class="panel-body">
                                <div class="form-horizontal">
                                    <div class="form-group required">
                                        <label class="col-sm-3 control-label" for="input-name">{{ entry_name }}</label>
                                        <div class="col-sm-9">
                                            <input type="text" name="name" value="{{ name }}" placeholder="{{ entry_name }}" id="input-name" class="form-control" />
                                            {% if error_name %}
                                                <div class="text-danger">{{ error_name }}</div>
                                            {% endif %}
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-sm-3 control-label" for="input-status">{{ entry_status }}</label>
                                        <div class="col-sm-6">
                                            <input type="hidden" name="status" value="0" />
                                            <input type="checkbox" class="ckb-switch" name="status" id="input-status"
                                                   data-toggle="toggle" data-on="{{ text_enabled }}" data-off="{{ text_disabled }}" data-width="100" data-height="36"
                                                    {% if status %} value="1" checked {% else %} value="0" {% endif %}>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-sm-3 control-label" for="input-title">{{ entry_title }}</label>
                                        <div class="col-sm-9">
                                            {% for language in languages %}
                                                <div class="input-group">
                                                    <span class="input-group-addon"><img src="language/{{ language.code }}/{{ language.code }}.png" title="{{ language.name }}" /></span>
                                                    <input type="text" name="module_title[{{ language.language_id }}]" value="{{ module_title[language.language_id] ? module_title[language.language_id] }}" placeholder="" id="input-title{{ language.language_id }}" class="form-control" />
                                                </div>
                                            {% endfor %}
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-sm-3 control-label" for="input-type">{{ entry_module_type }}</label>
                                        <div class="col-sm-6">
                                            <select id="input-type" class="form-control" name="module_type">
                                                <option value="single_tab" {% if module_type == "single_tab" %} selected="selected" {% endif %}>{{ text_type_single }}</option>
                                                <option value="multi_tabs" {% if module_type == "multi_tabs" %} selected="selected" {% endif %}>{{ text_type_multiple }}</option>
                                            </select>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-sm-3 control-label" for="input-show-module-des">{{ entry_show_module_des }}</label>
                                        <div class="col-sm-6">
                                            <input type="hidden" name="show_module_description" value="0" />
                                            <input type="checkbox" class="ckb-switch" name="show_module_description" id="input-show-module-des"
                                                   data-toggle="toggle" data-on="{{ text_enabled }}" data-off="{{ text_disabled }}" data-width="100" data-height="36"
                                                    {% if show_module_description %} value="1" checked {% else %} value="0" {% endif %}>
                                        </div>
                                    </div>

                                    <div class="form-group form-module-des">
                                        <label class="col-sm-3 control-label" for="input-module-des">{{ entry_module_des }}</label>
                                        <div class="col-sm-9">
                                            <ul class="nav nav-tabs" id="module-des-language">
                                                {% for language in languages %}
                                                    <li><a href="#module-des-language{{ language.language_id }}" data-toggle="tab"><img src="language/{{ language.code }}/{{ language.code }}.png" title="{{ language.name }}" /> {{ language.name }}</a></li>
                                                {% endfor %}
                                            </ul>
                                            <div class="tab-content">
                                                {% for language in languages %}
                                                <div class="tab-pane" id="module-des-language{{ language.language_id }}">
                                                    <textarea name="module_description[{{ language.language_id }}]" placeholder="{{ entry_module_des }}" id="input-module-des{{ language.language_id }}" data-toggle="summernote" data-lang="{{ summernote }}" class="form-control">{{ module_description[language.language_id] ? module_description[language.language_id] }}</textarea>
                                                </div>
                                                {% endfor %}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="theme-option-container">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h3 class="panel-title"><i class="fa fa-film"></i> {{ text_slider_settings }}</h3>
                            </div>
                            <div class="panel-body">
                                <div class="form-horizontal">
                                    <div class="form-group required">
                                        <label class="col-sm-3 control-label" for="input-slider-width">{{ entry_width }}</label>
                                        <div class="col-sm-4">
                                            <input type="text" name="slider_width" value="{{ slider_width }}" placeholder="{{ entry_width }}" id="input-slider-width" class="form-control" />
                                            {% if error_slider_width %}
                                                <div class="text-danger">{{ error_slider_width }}</div>
                                            {% endif %}
                                        </div>
                                    </div>

                                    <div class="form-group required">
                                        <label class="col-sm-3 control-label" for="input-slider-height">{{ entry_height }}</label>
                                        <div class="col-sm-4">
                                            <input type="text" name="slider_height" value="{{ slider_height }}" placeholder="{{ entry_height }}" id="input-slider-height" class="form-control" />
                                            {% if error_slider_height %}
                                                <div class="text-danger">{{ error_slider_height }}</div>
                                            {% endif %}
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-sm-3 control-label" for="input-auto">{{ entry_auto }}</label>
                                        <div class="col-sm-6">
                                            <input type="hidden" name="auto" value="0" />
                                            <input type="checkbox" class="ckb-switch" name="auto" id="input-auto"
                                                   data-toggle="toggle" data-on="{{ text_enabled }}" data-off="{{ text_disabled }}" data-width="100" data-height="36"
                                                    {% if auto %} value="1" checked {% else %} value="0" {% endif %}>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-sm-3 control-label" for="input-item">{{ entry_item }}</label>
                                        <div class="col-sm-9">
                                            <div class="form-control-inline">
                                                <i class="fa fa-desktop"></i>
                                                <input type="text" name="item[desktop]" value="{{ item.desktop }}" placeholder="{{ text_desktop }}" />
                                            </div>

                                            <div class="form-control-inline">
                                                <i class="fa fa-laptop"></i>
                                                <input type="text" name="item[laptop]" value="{{ item.laptop }}" placeholder="{{ text_laptop }}" />
                                            </div>

                                            <div class="form-control-inline">
                                                <i class="fa fa-tablet"></i>
                                                <input type="text" name="item[tablet]" value="{{ item.tablet }}" placeholder="{{ text_tablet }}" />
                                            </div>

                                            <div class="form-control-inline">
                                                <i class="fa fa-mobile"></i>
                                                <input type="text" name="item[mobile]" value="{{ item.mobile }}" placeholder="{{ text_mobile }}" />
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-sm-3 control-label" for="input-limit">{{ entry_limit }}</label>
                                        <div class="col-sm-4">
                                            <input type="text" name="limit" value="{{ limit }}" placeholder="{{ entry_limit }}" id="input-limit" class="form-control" />
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-sm-3 control-label" for="input-speed">{{ entry_speed }}</label>
                                        <div class="col-sm-4">
                                            <input type="text" name="speed" value="{{ speed }}" placeholder="{{ entry_speed }}" id="input-speed" class="form-control" />
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-sm-3 control-label" for="input-row">{{ entry_rows }}</label>
                                        <div class="col-sm-4">
                                            <input type="text" id="input-row" class="form-control" name="row" value="{{ row }}" placeholder="{{ entry_rows }}" />
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-sm-3 control-label" for="input-navigation">{{ entry_navigation }}</label>
                                        <div class="col-sm-6">
                                            <input type="hidden" name="navigation" value="0" />
                                            <input type="checkbox" class="ckb-switch" name="navigation" id="input-navigation"
                                                   data-toggle="toggle" data-on="{{ text_enabled }}" data-off="{{ text_disabled }}" data-width="100" data-height="36"
                                                    {% if navigation %} value="1" checked {% else %} value="0" {% endif %}>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-sm-3 control-label" for="input-pagination">{{ entry_pagination }}</label>
                                        <div class="col-sm-6">
                                            <input type="hidden" name="pagination" value="0" />
                                            <input type="checkbox" class="ckb-switch" name="pagination" id="input-pagination"
                                                   data-toggle="toggle" data-on="{{ text_enabled }}" data-off="{{ text_disabled }}" data-width="100" data-height="36"
                                                    {% if pagination %} value="1" checked {% else %} value="0" {% endif %}>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="theme-option-container">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h3 class="panel-title"><i class="fa fa-television"></i> {{ text_layout_settings }}</h3>
                            </div>
                            <div class="panel-body">
                                <div class="form-horizontal">
                                    <div class="form-group">
                                        <label class="col-sm-3 control-label" for="input-single-collection-layout">{{ entry_layout }}</label>
                                        <div class="col-sm-9">
                                            <div class="col-sm-6 radio-layout-type">
                                                <input type="radio" name="layout_type" id="layout-type-slider" value="slider" {% if layout_type == 'slider' %} checked="checked" {% endif %} />
                                                <label class="lb-layout-type {% if layout_type == 'slider' %} active {% endif %}" for="layout-type-slider"><img width="100px" src="../image/plaza/slider.png" /></label>
                                                <span>{{ text_slider }}</span>
                                            </div>
                                            <div class="col-sm-6 radio-layout-type">
                                                <input type="radio" name="layout_type" id="layout-type-gallery" value="gallery" {% if layout_type == 'gallery' %} checked="checked" {% endif %} />
                                                <label class="lb-layout-type {% if layout_type == 'gallery' %} active {% endif %}" for="layout-type-gallery"><img width="100px" src="../image/plaza/gallery.png" /></label>
                                                <span>{{ text_gallery }}</span>
                                            </div>
                                            <div class="col-sm-6 radio-layout-type">
                                                <input type="radio" name="layout_type" id="layout-type-large-item" value="large_item" {% if layout_type == 'large_item' %} checked="checked" {% endif %} />
                                                <label class="lb-layout-type {% if layout_type == 'large_item' %} active {% endif %}" for="layout-type-large-item"><img width="100px" src="../image/plaza/large_slider.png" /></label>
                                                <span>{{ text_large_item }}</span>
                                            </div>
                                            <div class="col-sm-6 radio-layout-type">
                                                <input type="radio" name="layout_type" id="layout-type-image" value="image" {% if layout_type == 'image' %} checked="checked" {% endif %} />
                                                <label class="lb-layout-type {% if layout_type == 'image' %} active {% endif %}" for="layout-type-image"><img width="100px" src="../image/plaza/image_slider.png" /></label>
                                                <span>{{ text_image_slider }}</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-5 col-sm-12">
                    <div class="theme-option-container data-settings-container single-type-module">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h3 class="panel-title"><i class="fa fa-shopping-bag"></i> {{ text_product_settings }}</h3>
                            </div>
                            <div class="panel-body">
                                <div class="form-horizontal">
                                    <div class="form-group">
                                        <label class="col-sm-3 control-label" for="input-single-collection">{{ entry_collection }}</label>
                                        <div class="col-sm-9">
                                            <div class="switch switch-multi3">
                                                <input type="radio" name="single_product_collection" class="switch-input" id="single-type-specified" value="specified" {% if single_product_collection == 'specified' %} checked="checked"{% endif %}/>
                                                <label for="single-type-specified" class="switch-label switch-label-1">{{ text_specified_product }}</label>

                                                <input type="radio" name="single_product_collection" class="switch-input" id="single-type-category" value="category" {% if single_product_collection == 'category' %} checked="checked"{% endif %}/>
                                                <label for="single-type-category" class="switch-label switch-label-2">{{ text_category_product }}</label>

                                                <input type="radio" name="single_product_collection" class="switch-input" id="single-type-special" value="special" {% if single_product_collection == 'special' %} checked="checked"{% endif %}/>
                                                <label for="single-type-special" class="switch-label switch-label-3">{{ text_special_product }}</label>

                                                <span class="switch-selection"></span>
                                            </div>
                                        </div>
                                    </div>

                                    <div id="module-single-type-specified" class="module-single-type-content">
                                        <div class="form-group">
                                            <label class="col-sm-3 control-label" for="input-single-specified-products">{{ entry_products }}</label>
                                            <div class="col-sm-9">
                                                <input type="text" name="single_specified_product" value="" placeholder="{{ entry_products }}" id="input-single-specified-products" class="form-control" />
                                                <div id="single-specified-product" class="well well-sm" style="height: 100px; overflow: auto;">
                                                    {% for product in single_specified_products %}
                                                        <div id="single-specified-product{{ product.product_id }}"><i class="fa fa-minus-circle"></i> {{ product.name }}
                                                            <input type="hidden" name="single_specified_products[]" value="{{ product.product_id }}" />
                                                        </div>
                                                    {% endfor %}
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div id="module-single-type-category" class="module-single-type-content">
                                        <div class="form-group">
                                            <label class="col-sm-3 control-label" for="input-single-category">{{ entry_category }}</label>
                                            <div class="col-sm-9">
                                                <select id="input-single-category" class="form-control selectpicker" data-live-search="true" title="{{ entry_category }}">
                                                    {% for category in categories %}
                                                        <option value="{{ category.category_id }}" {% if single_category == category.category_id %}selected="selected"{% endif %}>{{ category.name }}</option>
                                                    {% endfor %}
                                                </select>
                                                <input type="hidden" name="single_category" value="{{ single_category }}" />
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label class="col-sm-3 control-label" for="input-single-category-product">{{ entry_products }}</label>
                                            <div class="col-sm-9">
                                                <div class="switch switch-multi3">
                                                    <input type="radio" name="single_category_product_type" class="switch-input" id="single-category-product-all" value="all" {% if single_category_product_type == 'all' %} checked="checked"{% endif %}/>
                                                    <label for="single-category-product-all" class="switch-label switch-label-1">{{ text_all_products }}</label>

                                                    <input type="radio" name="single_category_product_type" class="switch-input" id="single-category-product-specified" value="specified" {% if single_category_product_type == 'specified' %} checked="checked"{% endif %}/>
                                                    <label for="single-category-product-specified" class="switch-label switch-label-2">{{ text_specified_product }}</label>

                                                    <input type="radio" name="single_category_product_type" class="switch-input" id="single-category-product-special" value="special" {% if single_category_product_type == 'special' %} checked="checked"{% endif %}/>
                                                    <label for="single-category-product-special" class="switch-label switch-label-3">{{ text_special_product }}</label>

                                                    <span class="switch-selection"></span>
                                                </div>

                                                <div class="single-category-product-specified single-category-type-chosen">
                                                    <input type="text" name="single_category_product" value="" placeholder="{{ entry_products }}" id="input-single-category-products" class="form-control" />
                                                    <div id="single-category-product" class="well well-sm" style="height: 100px; overflow: auto;">
                                                        {% for product in single_category_products %}
                                                            <div id="single-category-product{{ product.product_id }}"><i class="fa fa-minus-circle"></i> {{ product.name }}
                                                                <input type="hidden" name="single_category_products[]" value="{{ product.product_id }}" />
                                                            </div>
                                                        {% endfor %}
                                                    </div>
                                                </div>

                                                <div class="single-category-product-special single-category-type-chosen">
                                                    <select id="input-single-category-product-special-type" class="form-control selectpicker" title="{{ entry_products_type }}">
                                                        <option value="mostviewed" {% if single_category_product_special_type == 'mostviewed' %}selected="selected"{% endif %}>{{ text_most_viewed }}</option>
                                                        <option value="bestseller" {% if single_category_product_special_type == 'bestseller' %}selected="selected"{% endif %}>{{ text_bestseller }}</option>
                                                        <option value="special"    {% if single_category_product_special_type == 'special' %}selected="selected"{% endif %}>{{ text_special }}</option>
                                                        <option value="latest"     {% if single_category_product_special_type == 'latest' %}selected="selected"{% endif %}>{{ text_latest }}</option>
                                                        <option value="random"     {% if single_category_product_special_type == 'random' %}selected="selected"{% endif %}>{{ text_random }}</option>
                                                    </select>
                                                    <input type="hidden" name="single_category_product_special_type" value="{{ single_category_product_special_type }}" />
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div id="module-single-type-special" class="module-single-type-content">
                                        <div class="form-group">
                                            <label class="col-sm-3 control-label" for="input-single-product-special-type">{{ entry_products_type }}</label>
                                            <div class="col-sm-9">
                                                <select id="input-single-product-special-type" class="form-control selectpicker" title="{{ entry_products_type }}">
                                                    <option value="mostviewed" {% if single_product_special_type == 'mostviewed' %}selected="selected"{% endif %}>{{ text_most_viewed }}</option>
                                                    <option value="bestseller" {% if single_product_special_type == 'bestseller' %}selected="selected"{% endif %}>{{ text_bestseller }}</option>
                                                    <option value="special"    {% if single_product_special_type == 'special' %}selected="selected"{% endif %}>{{ text_special }}</option>
                                                    <option value="latest"     {% if single_product_special_type == 'latest' %}selected="selected"{% endif %}>{{ text_latest }}</option>
                                                    <option value="random"     {% if single_product_special_type == 'random' %}selected="selected"{% endif %}>{{ text_random }}</option>
                                                </select>
                                                <input type="hidden" name="single_product_special_type" value="{{ single_product_special_type }}" />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h3 class="panel-title"><i class="fa fa-image"></i> {{ text_image_settings }}</h3>
                            </div>
                            <div class="panel-body">
                                <div class="form-horizontal">
                                    <div class="form-group">
                                        <label class="col-sm-3 control-label" for="input-single-image-width">{{ entry_width }}</label>
                                        <div class="col-sm-4">
                                            <input type="text" name="single_image_width" value="{{ single_image_width }}" placeholder="{{ entry_width }}" id="input-single-image-width" class="form-control" />
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-sm-3 control-label" for="input-single-image-height">{{ entry_height }}</label>
                                        <div class="col-sm-4">
                                            <input type="text" name="single_image_height" value="{{ single_image_height }}" placeholder="{{ entry_height }}" id="input-single-image-height" class="form-control" />
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-sm-3 control-label" for="input-single-image">{{ entry_image }}</label>
                                        <div class="col-sm-9">
                                            <a href="javascript:void(0);" id="input-singe-module-image" data-toggle="image" class="img-thumbnail"><img src="{{ single_image_thumb }}" alt="" title="" data-placeholder="{{ single_image_placeholder }}" /></a>
                                            <input type="hidden" name="single_image" value="{{ single_image }}" id="input-single-image" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="data-settings-container multi-type-module">
                        <div class="multi-product-tabs-content">
                            <div class="product-tab-0 product-tab-content" data-tab="0">
                                <button type="button" class="btn-full btn-tab">
                                    <span class="left">Tab</span>
                                    <span class="right"><i class="fa fa-chevron-down"></i></span>
                                </button>
                                <div class="tab-settings-content">
                                    <div class="panel panel-default">
                                        <div class="panel-heading">
                                            <h3 class="panel-title"><i class="fa fa-shopping-bag"></i> {{ text_product_settings }}</h3>
                                        </div>
                                        <div class="panel-body">
                                            <div class="form-horizontal">
                                                <div class="form-group">
                                                    <label class="col-sm-3 control-label" for="input-multi-collection">{{ entry_collection }}</label>
                                                    <div class="col-sm-9">
                                                        <div class="switch switch-multi3">
                                                            <input type="radio" name="tabs[0][product_collection]" class="switch-input" id="multi-type-specified-0" value="specified" {% if tabs[0].product_collection == 'specified' %} checked="checked"{% endif %}/>
                                                            <label for="multi-type-specified-0" class="switch-label switch-label-1">{{ text_specified_product }}</label>

                                                            <input type="radio" name="tabs[0][product_collection]" class="switch-input" id="multi-type-category-0" value="category" {% if tabs[0].product_collection == 'category' %} checked="checked"{% endif %}/>
                                                            <label for="multi-type-category-0" class="switch-label switch-label-2">{{ text_category_product }}</label>

                                                            <input type="radio" name="tabs[0][product_collection]" class="switch-input" id="multi-type-special-0" value="special" {% if tabs[0].product_collection == 'special' %} checked="checked"{% endif %}/>
                                                            <label for="multi-type-special-0" class="switch-label switch-label-3">{{ text_special_product }}</label>

                                                            <span class="switch-selection"></span>
                                                        </div>
                                                    </div>
                                                </div>

                                                <div id="module-multi-type-specified-0" class="module-multi-type-content-0">
                                                    <div class="form-group">
                                                        <label class="col-sm-3 control-label" for="input-multi-specified-products-0">{{ entry_products }}</label>
                                                        <div class="col-sm-9">
                                                            <input type="text" class="form-control multi-specified-products-0" value="" placeholder="{{ entry_products }}" id="input-multi-specified-products-0" />
                                                            <div id="multi-specified-product-0" class="well well-sm" style="height: 100px; overflow: auto;">
